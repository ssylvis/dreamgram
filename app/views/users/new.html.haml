- @title = 'Signup'

= form_for @user, :url => signup_path, :html => {:class => 'form-horizontal'} do |f|
  .form-group
    = f.label :name, 'Name:', :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :name, :autofocus => true, :class => 'form-control'
  = render :partial => 'shared/signin', :locals => {:form => f, :model => @user}
  .form-group
    = f.label :password_confirmation, 'Confirm:', :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password_confirmation, :class => 'form-control'
  .form-group
    %span.col-sm-offset-2.col-sm-4
      = f.submit 'Signup', :class => 'btn btn-primary'
      %span.secondary-link
        Already registered?
        = link_to "Sign in.", login_path
