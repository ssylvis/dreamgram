- @title = t('.title')

= form_for @user, :url => user_registration_path, :html => {:class => 'form-horizontal'} do |f|
  = f.hidden_field :remember_me, :value => true
  - form_group_for(@user, :name) do
    = f.label :name, t('.name'), :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :name, :autofocus => true, :class => 'form-control'
      - error_for @user, :name
  = render :partial => 'devise/shared/credentials', :locals => {:form => f, :model => @user}
  .form-group
    = f.label :password_confirmation, t('.password_confirmation'), :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password_confirmation, :class => 'form-control'
  .form-group
    %span.col-sm-offset-2.col-sm-4
      = f.submit t('.submit'), :class => 'btn btn-primary'
      %span.secondary-link
        = t('.already_registered')
        = link_to t('.signin'), new_user_session_path
