- @title = 'Signin'

- if flash[:alert].present?
  .alert.alert-danger
    %strong Oops!
    = flash[:alert]

= form_for :user, :url => new_user_session_path, :html => {:class => 'form-horizontal'} do |f|
  = render :partial => 'devise/shared/signin', :locals => {:form => f, :autofocus => true}
  .form-group
    %span.col-sm-offset-2.col-sm-5
      = f.submit 'Signin', :class => 'btn btn-primary'
      %span.secondary-link
        New user?
        = link_to "Register for an account.", new_user_registration_path
