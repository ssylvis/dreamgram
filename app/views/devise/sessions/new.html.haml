- @title = t('.title')

- if flash[:alert].present?
  .alert.alert-danger
    %strong Oops!
    = flash[:alert]

= form_for :user, :url => new_user_session_path, :html => {:class => 'form-horizontal'} do |f|
  = f.hidden_field :remember_me, :value => true
  = render :partial => 'devise/shared/credentials', :locals => {:form => f, :autofocus => true}
  .form-group
    .col-sm-offset-2.col-sm-5
      = f.submit t('.submit'), :class => 'btn btn-primary'
  .form-group
    .col-sm-offset-2.col-sm-5
      = link_to new_user_password_path, :class => 'secondary-link' do
        = t('.forgot_password')
        %i.fa.fa-chevron-circle-right
      = link_to new_user_registration_path, :class => 'secondary-link' do
        = t('.register')
        %i.fa.fa-chevron-circle-right
