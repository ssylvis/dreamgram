- autofocus ||= nil
- model ||= nil

- form_group_for(model, :email) do
  = form.label :email, t('.email'), :class => 'col-sm-2 control-label'
  .col-sm-4
    = form.text_field :email, :autofocus => autofocus, :class => 'form-control'
    - error_for model, :email
- form_group_for(model, :password) do
  = form.label :password, t('.password'), :class => 'col-sm-2 control-label'
  .col-sm-4
    = form.password_field :password, :class => 'form-control'
    - error_for model, :password
