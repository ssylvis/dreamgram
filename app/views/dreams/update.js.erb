<% if @dream.errors.any? -%>
  var notice = $("<%= escape_javascript(render(:partial => "shared/notices")) %>");
  $(".notices").empty().append(notice);
<% else -%>
  $("#dream_<%= @dream.id %> .completed-button button").toggleClass("completed");
  $("#dream_<%= @dream.id %> .completed-button #dream_completed").attr("value", "<%= !@dream.completed? %>");
  $("#dream_<%= @dream.id %> img").attr("title", "<%= dream_image_title(@dream) %>");
<% end -%>
