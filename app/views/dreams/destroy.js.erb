<% if @dream.errors.any? -%>
  var notice = $("<%= escape_javascript(render(:partial => "shared/notices")) %>");
  $(".notices").empty().append(notice);
<% else -%>
  $("#dream_<%= @dream.id %>").remove();
  <% if current_account.dreams.empty? %>
    $(".header .buttons .edit").hide();
    $(".header .buttons .social").hide();
    $(".dreams .alert").show();
  <% end -%>
<% end -%>
