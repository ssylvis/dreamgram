- @title = 'Signin'

- unless flash.empty?
  .alert.alert-danger
    %strong Oops!
    = flash[:error]

= form_for :session, :url => login_path, :html => {:class => 'form-horizontal'} do |f|
  = render :partial => 'shared/signin', :locals => {:form => f}
  .form-group
    %span.col-sm-offset-2.col-sm-5
      = f.submit 'Signin', :class => 'btn btn-primary'
      %span.secondary-link
        New user?
        = link_to "Register for an account.", signup_path
