- content_for :body do
  - if user_signed_in?
    %section.profile
      .navigation
        = link_to t('.account'), edit_user_registration_path, :class => 'btn-link'
        = button_to t('.logout'), destroy_user_session_path, :method => :delete, :class => 'btn-link'

  %header.row
    .col-xs-12
      .header
        %h1
          = link_to t('.header').upcase, dreams_path
        - if user_signed_in?
          %h1.user-name= current_user.name.upcase
        = yield :header

  = yield

= render template: 'layouts/scaffold'
