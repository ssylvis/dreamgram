- content_for :body do
  - if logged_in?
    %section.profile
      = button_to 'Logout', logout_path, {:method => :delete, :class => 'btn-link'}

  %header.row
    .col-xs-12
      .header
        %h1
          = link_to 'DREAMGRAM', dreams_path
        - if logged_in?
          %h1.user-name= current_user.name.upcase
        = yield :header

  = yield

= render template: 'layouts/scaffold'
