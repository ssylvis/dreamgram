source 'https://rubygems.org'
ruby '1.9.3'

gem 'bootstrap-sass'
gem 'haml-rails'
gem 'jquery-rails'
gem 'json'
gem 'rails', '3.2.13'

group :development, :test do
  gem 'pry-debugger'
  gem 'rspec-rails'
  gem 'sqlite3'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'font-awesome-rails'
  gem 'sass-rails', '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :production do
  gem 'pg'
end
